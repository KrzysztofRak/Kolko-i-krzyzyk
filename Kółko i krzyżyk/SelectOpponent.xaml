                <ImageBrush Stretch="Fill" ImageSource="Assets/button_computer.png"/>
            </Button.Background>
        </Button>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,35,0,0" TextWrapping="Wrap" Text="Przeciwnik" VerticalAlignment="Top" Height="54" Width="380" FocusVisualPrimaryBrush="Black" Foreground="White" Canvas.ZIndex="3" TextAlignment="Center" FontWeight="Bold" FontFamily="Comic Sans MS" FontSize="36"/>

